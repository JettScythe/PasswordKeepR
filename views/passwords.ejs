<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Passwords</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/passwords.css" type="text/css" />

    <!-- Boostrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
      crossorigin="anonymous"
    />

    <script
      src="https://kit.fontawesome.com/b896dd3895.js"
      crossorigin="anonymous"
    ></script>

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/passwordGenerator.js"></script>
  </head>

  <body class='body'>
    <%- include('partials/_header') %>

    <h1>Passwords for <%= `${orgName}` %></h1>

    <section class="passwords_container"></section>

    <section>
      <div class="toggle_add_account">
        <button class="btn-primary plus">
          <i class="fas fa-plus"></i>
        </button>
      </div>
      <div class="add_account">
        <div class="password-forms">
          <div class="add-password-form">
            <%- include('partials/_new-password-form') %>
          </div>
          <div class="generate-password-form">
            <%- include('partials/_new-password-generator-form') %>
          </div>
        </div>
      </div>
    </section>

    <script type="text/javascript" src="/scripts/main.js"></script>
  </body>
</html>
